default_platform(:android)

platform :android do
  desc "Build release AAB and upload to Play Console internal track"
  lane :beta do |options|
    flavor = options[:flavor] || "production"
    props = {
      "android.injected.signing.store.file" => ENV['ANDROID_KEYSTORE_FILE'],
      "android.injected.signing.store.password" => ENV['ANDROID_KEYSTORE_PASSWORD'],
      "android.injected.signing.key.alias" => ENV['ANDROID_KEY_ALIAS'],
      "android.injected.signing.key.password" => ENV['ANDROID_KEY_PASSWORD'],
    }
    gradle(
      task: "bundle",
      flavor: flavor,
      build_type: "Release",
      properties: props,
    )

    pkg = flavor == "staging" ? "com.zkproofport.app.staging" : "com.zkproofport.app"

    if ENV['GOOGLE_APPLICATION_CREDENTIALS']
      supply(
        track: "internal",
        json_key: ENV['GOOGLE_APPLICATION_CREDENTIALS'],
        package_name: pkg,
        aab: lane_context[SharedValues::GRADLE_AAB_OUTPUT_PATH],
        skip_upload_metadata: true,
        skip_upload_images: true,
        skip_upload_screenshots: true,
        skip_upload_changelogs: true,
      )
    elsif ENV['SUPPLY_JSON_KEY']
      supply(
        track: "internal",
        package_name: pkg,
        aab: lane_context[SharedValues::GRADLE_AAB_OUTPUT_PATH],
        skip_upload_metadata: true,
        skip_upload_images: true,
        skip_upload_screenshots: true,
        skip_upload_changelogs: true,
      )
    end
  end

  desc "Build release APK"
  lane :build_apk do |options|
    flavor = options[:flavor] || "production"
    gradle(
      task: "assemble",
      flavor: flavor,
      build_type: "Release",
      properties: {
        "android.injected.signing.store.file" => ENV['ANDROID_KEYSTORE_FILE'],
        "android.injected.signing.store.password" => ENV['ANDROID_KEYSTORE_PASSWORD'],
        "android.injected.signing.key.alias" => ENV['ANDROID_KEY_ALIAS'],
        "android.injected.signing.key.password" => ENV['ANDROID_KEY_PASSWORD'],
      },
    )
  end
end
