default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    setup_ci if ENV['CI']

    api_key = app_store_connect_api_key(
      key_id: ENV['ASC_KEY_ID'],
      issuer_id: ENV['ASC_ISSUER_ID'],
      key_content: ENV['ASC_API_KEY'],
      is_key_content_base64: true,
    )

    match(
      type: "appstore",
      app_identifier: "com.zkproofport.app",
      readonly: ENV['CI'] == 'true',
    )

    increment_build_number(
      build_number: ENV['BUILD_NUMBER'] || latest_testflight_build_number(api_key: api_key) + 1,
      xcodeproj: "ProofportApp.xcodeproj",
    )

    build_app(
      workspace: "ProofportApp.xcworkspace",
      scheme: "ProofportApp",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "ProofportApp.ipa",
      clean: true,
    )

    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
    )
  end

  desc "Build and submit to App Store"
  lane :release do
    setup_ci if ENV['CI']

    api_key = app_store_connect_api_key(
      key_id: ENV['ASC_KEY_ID'],
      issuer_id: ENV['ASC_ISSUER_ID'],
      key_content: ENV['ASC_API_KEY'],
      is_key_content_base64: true,
    )

    match(
      type: "appstore",
      app_identifier: "com.zkproofport.app",
      readonly: ENV['CI'] == 'true',
    )

    build_app(
      workspace: "ProofportApp.xcworkspace",
      scheme: "ProofportApp",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "ProofportApp.ipa",
      clean: true,
    )

    upload_to_app_store(
      api_key: api_key,
      submit_for_review: false,
      force: true,
    )
  end
end
