default_platform(:ios)

platform :ios do
  desc "Build IPA for local install or TestFlight"
  lane :beta do |options|
    env = options[:env] || "production"
    app_env = env == "staging" ? "development" : "production"

    setup_ci if ENV['CI']

    if ENV['ASC_API_KEY_PATH'] && File.exist?(ENV['ASC_API_KEY_PATH'])
      api_key = app_store_connect_api_key(
        key_id: ENV['ASC_KEY_ID'],
        issuer_id: ENV['ASC_ISSUER_ID'],
        key_filepath: ENV['ASC_API_KEY_PATH'],
      )
    elsif ENV['ASC_KEY_ID']
      api_key = app_store_connect_api_key(
        key_id: ENV['ASC_KEY_ID'],
        issuer_id: ENV['ASC_ISSUER_ID'],
        key_content: ENV['ASC_API_KEY'],
        is_key_content_base64: true,
      )
    end

    if ENV['CI'] && api_key
      match(
        type: "appstore",
        app_identifier: "com.zkproofport.app",
        readonly: true,
      )
    end

    if api_key
      increment_build_number(
        build_number: ENV['BUILD_NUMBER'] || latest_testflight_build_number(api_key: api_key) + 1,
        xcodeproj: "ProofportApp.xcodeproj",
      )
    end

    build_app(
      workspace: "ProofportApp.xcworkspace",
      scheme: "ProofportApp",
      export_method: ENV['ASC_KEY_ID'] ? "app-store" : "development",
      output_directory: "./build",
      output_name: "ProofportApp.ipa",
      clean: true,
      xcargs: "APP_ENV=#{app_env}",
      export_xcargs: "-allowProvisioningUpdates",
    )

    if api_key
      upload_to_testflight(
        api_key: api_key,
        skip_waiting_for_build_processing: true,
      )
    end
  end

  desc "Build and submit to App Store"
  lane :release do
    setup_ci if ENV['CI']

    if ENV['ASC_API_KEY_PATH'] && File.exist?(ENV['ASC_API_KEY_PATH'])
      api_key = app_store_connect_api_key(
        key_id: ENV['ASC_KEY_ID'],
        issuer_id: ENV['ASC_ISSUER_ID'],
        key_filepath: ENV['ASC_API_KEY_PATH'],
      )
    else
      api_key = app_store_connect_api_key(
        key_id: ENV['ASC_KEY_ID'],
        issuer_id: ENV['ASC_ISSUER_ID'],
        key_content: ENV['ASC_API_KEY'],
        is_key_content_base64: true,
      )
    end

    match(
      type: "appstore",
      app_identifier: "com.zkproofport.app",
      readonly: ENV['CI'] == 'true',
    )

    build_app(
      workspace: "ProofportApp.xcworkspace",
      scheme: "ProofportApp",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "ProofportApp.ipa",
      clean: true,
      xcargs: "APP_ENV=production",
      export_xcargs: "-allowProvisioningUpdates",
    )

    upload_to_app_store(
      api_key: api_key,
      submit_for_review: false,
      force: true,
    )
  end

  desc "Build IPA only (no upload)"
  lane :build_ipa do |options|
    env = options[:env] || "production"
    app_env = env == "staging" ? "development" : "production"

    build_app(
      workspace: "ProofportApp.xcworkspace",
      scheme: "ProofportApp",
      export_method: "development",
      output_directory: "./build",
      output_name: "ProofportApp.ipa",
      clean: true,
      xcargs: "APP_ENV=#{app_env}",
      export_xcargs: "-allowProvisioningUpdates",
    )
  end
end
