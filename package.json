{
  "name": "zkproofport",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "android:clean": "./scripts/clear-android-cache.sh && react-native run-android",
    "android:device": "react-native run-android --deviceId",
    "android:device:clean": "./scripts/clear-android-cache.sh && react-native run-android --deviceId",
    "android:wipe": "adb emu kill ; sleep 2 ; emulator -avd $(emulator -list-avds | head -1) -wipe-data -no-snapshot-load &",
    "clean:android": "./scripts/clear-android-cache.sh",
    "clean:ios": "./scripts/clear-ios-cache.sh",
    "clean:all": "./scripts/clear-android-cache.sh && ./scripts/clear-ios-cache.sh",
    "ios": "react-native run-ios",
    "ios:clean": "./scripts/clear-ios-cache.sh && npm run pod-install && react-native run-ios",
    "ios:device": "react-native run-ios --device",
    "ios:device:clean": "./scripts/clear-ios-cache.sh && npm run pod-install && react-native run-ios --device",
    "ios:build": "cd ios && xcodebuild -workspace ProofPortApp.xcworkspace -scheme ProofPortApp -configuration Debug -sdk iphonesimulator -arch arm64 build ONLY_ACTIVE_ARCH=YES CODE_SIGNING_ALLOWED=NO",
    "ios:install": "xcrun simctl install booted /Users/nhn/Library/Developer/Xcode/DerivedData/ProofPortApp-*/Build/Products/Debug-iphonesimulator/ProofPortApp.app",
    "ios:launch": "xcrun simctl launch booted com.zkproofport.app",
    "ios:run": "npm run ios:build && npm run ios:install && npm run ios:launch",
    "lint": "eslint .",
    "start": "react-native start",
    "start:clean": "react-native start --reset-cache",
    "test": "jest",
    "assets": "npx react-native-asset",
    "pod-install": "cd ios && LANG=en_US.UTF-8 LC_ALL=en_US.UTF-8 pod install && cd .."
  },
  "dependencies": {
    "@ethersproject/shims": "^5.8.0",
    "@privy-io/expo": "^0.62.1",
    "@privy-io/expo-native-extensions": "^0.0.6",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/native": "^7.1.25",
    "@react-navigation/native-stack": "^7.8.6",
    "@reown/appkit-ethers-react-native": "^2.0.1",
    "@reown/appkit-react-native": "^2.0.1",
    "@types/base-64": "^1.0.2",
    "@walletconnect/react-native-compat": "^2.23.1",
    "base-64": "^1.0.0",
    "eciesjs": "^0.4.16",
    "ethers": "^5.7.2",
    "expo": "~54.0.0",
    "expo-apple-authentication": "^8.0.8",
    "expo-application": "^7.0.8",
    "expo-constants": "^18.0.12",
    "expo-crypto": "^15.0.8",
    "expo-linking": "^8.0.11",
    "expo-secure-store": "^15.0.8",
    "expo-web-browser": "^15.0.10",
    "fast-text-encoding": "^1.0.6",
    "mopro-ffi": "file:./mopro_bindings",
    "react": "19.1.0",
    "react-freeze": "^1.0.4",
    "react-native": "0.81.4",
    "react-native-fs": "^2.20.0",
    "react-native-get-random-values": "^2.0.0",
    "react-native-modal": "^14.0.0-rc.1",
    "react-native-passkeys": "^0.4.0",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "^4.18.0",
    "react-native-svg": "^15.15.1",
    "react-native-webview": "^13.16.0",
    "viem": "^2.42.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-export-namespace-from": "^7.27.1",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native/babel-preset": "0.81.4",
    "@react-native/eslint-config": "^0.81.1",
    "@react-native/metro-config": "0.81.4",
    "@react-native/typescript-config": "0.81.4",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.0",
    "@types/react-test-renderer": "^19.1.0",
    "babel-preset-expo": "~54.0.9",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "patch-package": "^8.0.1",
    "prettier": "2.8.8",
    "react-test-renderer": "19.1.0",
    "sharp": "^0.34.5",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20"
  },
  "overrides": {
    "@walletconnect/core": "2.23.1",
    "@walletconnect/universal-provider": "2.23.1"
  }
}
